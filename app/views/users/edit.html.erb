<%= form_with model: @user do |f| %>
<%= f.label(:username)%>
<%= f.text_field(:username, placeholder: "")%>
<%= f.label(:password)%>
<%= f.text_field(:password, placeholder: "")%>
<%= f.label(:email)%>
<%= f.text_field(:email, placeholder: "")%>
<%= f.submit("Submit")%>
<% end %>

